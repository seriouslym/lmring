{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:monorepos",
    "group:recommended"
  ],
  "prConcurrentLimit": 5,
  "timezone": "UTC",
  "schedule": [
    "before 5am on Monday"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "Ignore framer-motion deprecation replacement",
      "matchPackageNames": ["framer-motion"],
      "matchUpdateTypes": ["replacement"],
      "enabled": false
    },
    {
      "description": "Pin Next.js to version 16.x",
      "matchPackageNames": [
        "next",
        "@next/bundle-analyzer"
      ],
      "allowedVersions": "16.x"
    },
    {
      "description": "Group workspace packages together",
      "groupName": "workspace packages",
      "schedule": [
        "at any time"
      ],
      "matchPackageNames": [
        "@lmring/{/,}**"
      ]
    },
    {
      "description": "Group React ecosystem updates",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react{/,}**"
      ],
      "groupName": "React ecosystem",
      "schedule": [
        "at any time"
      ]
    },
    {
      "description": "Group Drizzle ORM packages",
      "matchPackageNames": [
        "drizzle-orm",
        "drizzle-kit"
      ],
      "groupName": "Drizzle ORM"
    },
    {
      "description": "Group AI SDK packages",
      "matchPackageNames": [
        "ai",
        "@ai-sdk/{/,}**"
      ],
      "groupName": "AI SDK packages"
    },
    {
      "description": "Group Supabase packages",
      "groupName": "Supabase packages",
      "matchPackageNames": [
        "@supabase/{/,}**"
      ]
    },
    {
      "description": "Group Sentry packages",
      "groupName": "Sentry packages",
      "matchPackageNames": [
        "@sentry/{/,}**"
      ]
    },
    {
      "description": "Group Arcjet packages",
      "groupName": "Arcjet packages",
      "matchPackageNames": [
        "@arcjet/{/,}**"
      ]
    },
    {
      "description": "Group Playwright packages",
      "groupName": "Playwright packages",
      "matchPackageNames": [
        "@playwright/{/,}**"
      ]
    },
    {
      "description": "Group Tailwind CSS packages",
      "matchPackageNames": [
        "tailwindcss",
        "postcss",
        "@tailwindcss/{/,}**"
      ],
      "groupName": "Tailwind CSS"
    },
    {
      "description": "Group Vitest packages",
      "matchPackageNames": [
        "vitest",
        "vite",
        "@vitest/{/,}**",
        "@vitejs/{/,}**"
      ],
      "groupName": "Vitest ecosystem"
    },
    {
      "description": "Group Biome packages",
      "groupName": "Biome",
      "matchPackageNames": [
        "@biomejs/{/,}**"
      ]
    },
    {
      "description": "Group TypeScript and related types",
      "matchPackageNames": [
        "typescript",
        "@types/{/,}**"
      ],
      "groupName": "TypeScript and types",
      "schedule": [
        "at any time"
      ]
    },
    {
      "description": "Automerge patch and minor updates for devDependencies",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": [
        "!typescript",
        "!next",
        "!@next/bundle-analyzer"
      ]
    },
    {
      "description": "More frequent checks for security updates",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "schedule": [
        "at any time"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Group major updates separately with manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "major-update",
        "dependencies"
      ],
      "automerge": false,
      "schedule": [
        "before 5am on the first day of the month"
      ]
    },
    {
      "description": "Disable Node.js engine version updates",
      "matchDepTypes": [
        "engines"
      ],
      "matchPackageNames": [
        "node"
      ],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "schedule": [
      "at any time"
    ]
  },
  "ignoreDeps": [],
  "prCreation": "not-pending",
  "prHourlyLimit": 2
}
