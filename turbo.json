{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env", "**/.env.*"],
  "tasks": {
    "//#lint:root": {
      "cache": false
    },
    "//#lint:root:fix": {
      "cache": false
    },
    "//#format:root": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "ENCRYPTION_KEY",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "DEPLOYMENT_MODE",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "ANALYZE",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_SENTRY_DISABLED",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_DEPLOYMENT_MODE",
        "NEXT_PUBLIC_BETTER_STACK_SOURCE_TOKEN",
        "NEXT_PUBLIC_BETTER_STACK_INGESTING_HOST",
        "SENTRY_ORGANIZATION",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "ARCJET_KEY"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:spotlight": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "check:types": {
      "dependsOn": ["^build"]
    },
    "check:deps": {},
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
